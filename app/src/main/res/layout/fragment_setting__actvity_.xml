<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting_Actvity_Fragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/settingsFragment_fragment_settingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/settingsFragment_linearLayout_optionsButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/settings_nav" />

    <ScrollView
        android:id="@+id/settingsFragment_linearLayout_optionsButtons"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/settingsFragment_button_UserDetails_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:text="@string/settingsFragment_userDetailsButton_LABEL" />

            <Button
                android:id="@+id/settingsFragment_button_Palette_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:text="@string/settingsFragment_paletteButton_LABEL" />

            <Button
                android:id="@+id/settingsFragment_button_Help_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:text="@string/settingsFragment_helpButton_LABEL" />

            <Button
                android:id="@+id/settingsFragment_button_Feedback_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:text="@string/settingsFragment_feedbackAndSuggestionsButton_LABEL" />

            <Button
                android:id="@+id/settingsFragment_button_About_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:text="@string/settingsFragment_aboutUsButton_LABEL" />

            <Button
                android:id="@+id/settingsFragment_button_TOC_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:text="@string/settingsFragment_termsAndConditionsButton_LABEL" />

            <Button
                android:id="@+id/settingsFragment_button_Privacy_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:text="@string/settingsFragment_privacyPolicyButton_LABEL" />

            <Button
                android:id="@+id/settingsFragment_button_Account_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                android:text="@string/settingsFragment_accountSecurityButton_LABEL" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>