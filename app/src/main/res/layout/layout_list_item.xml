<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/exerciseborder"
    android:padding="3dp"
    android:layout_gravity="center"
    android:gravity="center">

    <TextView
        android:id="@+id/ExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:padding="5dp"
        android:text="Snatch from Blocks"
        android:textColor="@color/Rich_Black_FOGRA_39"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Weight"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:gravity="center"
        android:lines="1"
        android:text="100"
        android:textColor="@color/Rich_Black_FOGRA_39"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/WeightKGText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/Reps"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:gravity="center"
        android:lines="1"
        android:text="100"
        android:textColor="@color/Rich_Black_FOGRA_39"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/RepsText"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:gravity="center"
        android:lines="1"
        android:text=" reps"
        android:textColor="@color/Rich_Black_FOGRA_39"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Reps"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/WeightKGText"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:gravity="center"
        android:lines="1"
        android:text=" kg"
        android:textColor="@color/Rich_Black_FOGRA_39"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExerciseName"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="35dp"
        android:layout_height="41dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>