<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".individual_workout_activity">

    <LinearLayout
        android:id="@+id/individualWorkoutActivity_linearLayout_workout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/individualWorkoutActivity_button_workoutsReturn"
            android:layout_gravity="start"
            android:background="@drawable/bakcarrow"
            android:contentDescription="@string/individualWorkoutActivity_backButton_DESCRIPTION"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:id="@+id/individualWorkoutActivity_linearLayout_workoutDetailsAndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/exerciseviewborder"
            android:clickable="true"
            android:orientation="vertical"
            android:focusable="true">

            <TextView
                android:id="@+id/individualWorkoutActivity_textView_dateplaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/individualWorkoutActivity_datePlaceholder_LABEL"
                android:textColor="@color/Rich_Black_FOGRA_39"
                android:textSize="22sp">

            </TextView>

            <LinearLayout
                android:id="@+id/individualWorkoutActivity_linearLayout_workoutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/individualWorkoutActivity_linearLayout_moodAndSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/individualWorkoutActivity_linearLayout_mood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/individualWorkoutActivity_textView_mood"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:gravity="start"
                            android:text="@string/individualWorkoutActivity_mood_LABEL"
                            android:textColor="@color/Rich_Black_FOGRA_39"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/individualWorkoutActivity_textView_moodValue"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@string/individualWorkoutActivity_detailsPlaceholder_LABEL"
                            android:textColor="@color/Rich_Black_FOGRA_39"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/individualWorkoutActivity_linearLayout_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/individualWorkoutActivity_textView_sleep"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:text="@string/individualWorkoutActivity_sleep_LABEL"
                            android:textColor="@color/Rich_Black_FOGRA_39"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/individualWorkoutActivity_textView_sleepValue"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@string/individualWorkoutActivity_detailsPlaceholder_LABEL"
                            android:textColor="@color/Rich_Black_FOGRA_39"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/individualWorkoutActivity_linearLayout_weightAndCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="end"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/individualWorkoutActivity_linearLayout_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/individualWorkoutActivity_textView_weight"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:gravity="left"
                            android:text="@string/individualWorkoutActivity_weight_LABEL"
                            android:textColor="@color/Rich_Black_FOGRA_39"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/individualWorkoutActivity_textView_weightValue"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="@string/individualWorkoutActivity_detailsPlaceholder_LABEL"
                            android:textColor="@color/Rich_Black_FOGRA_39"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/individualWorkoutActivity_linearLayout_calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/individualWorkoutActivity_textView_calories"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:text="@string/individualWorkoutActivity_calories_LABEL"
                            android:textColor="@color/Rich_Black_FOGRA_39"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/individualWorkoutActivity_textView_caloriesValue"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@string/individualWorkoutActivity_detailsPlaceholder_LABEL"
                            android:textColor="@color/Rich_Black_FOGRA_39"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/individualWorkoutActivity_constraintLayout_exercises"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="15dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/individualWorkoutActivity_recyclerView_exercises"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/exerciseviewborder"
                android:orientation="vertical"
                android:padding="15dp"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/individualWorkoutActivity_textView_noExercises"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/individualWorkoutActivity_noExercisesYet_LABEL"
                android:textColor="#63000000"
                app:layout_constraintBottom_toBottomOf="@+id/individualWorkoutActivity_recyclerView_exercises"
                app:layout_constraintEnd_toEndOf="@+id/individualWorkoutActivity_recyclerView_exercises"
                app:layout_constraintStart_toStartOf="@+id/individualWorkoutActivity_recyclerView_exercises"
                app:layout_constraintTop_toTopOf="@+id/individualWorkoutActivity_recyclerView_exercises" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/individualWorkoutActivity_linearLayout_finishAndAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/individualWorkoutActivity_button_finishWorkout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/button"
                android:text="@string/individualWorkoutActivity_finishWorkoutButton_LABEL"/>

            <Button
                android:id="@+id/individualWorkoutActivity_button_addNewExercise"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/button"
                android:text="@string/individualWorkoutActivity_addExerciseButton_LABEL" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>