<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exerciseborder"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/button_outgoingrequest_cancelbutton"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textview_outgoing_name"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Placeholder"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_outgoing_date"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Placeholder"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/textview_outgoing_name" />

            <TextView
                android:id="@+id/textView_outgoingrequest_type"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:gravity="left|center"
                android:padding="3dp"
                android:text="Placeholder"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_outgoing_date" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_outgoingrequest_cancelbutton"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/button"
            android:minWidth="72dp"
            android:minHeight="32dp"
            android:text="Cancel Request"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>