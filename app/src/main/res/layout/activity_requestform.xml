<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="210dp"
    android:background="@drawable/singleexerciseview"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context="zxc.studio.vpt.CoachFrontPage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinnerCoachAthleteRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placeholder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextCoachNameRequestForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="User's Email"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/editviewCoachFirstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="User's First Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/editTextCoachLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="User's Last Name"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonRequestFormRequest"
                android:layout_width="wrap_content"
                android:background="@drawable/button"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:rotationY="0"
                android:layout_margin="5dp"
                android:text="Request" />

        </LinearLayout>

        <TextView
            android:id="@+id/errorMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:gravity="center"
            android:text="No Such User Exists"
            android:textColor="#FF0000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>