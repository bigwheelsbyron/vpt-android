                />

                <Button
                    android:id="@+id/button_okayTOC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:layout_margin="5dp"
                    android:text="Okay" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>




