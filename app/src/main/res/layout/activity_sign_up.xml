                <TextView
                    android:id="@+id/signUpActivity_textView_offerText"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:text="@string/signUpActivity_tocs_PLACEHOLDER"
                    android:textColor="@color/Rich_Black_FOGRA_39"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/signUpActivity_textView_terminationTitle"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:text="@string/signUpActivity_terminationTitle_LABEL"
                    android:textColor="@color/Rich_Black_FOGRA_39"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/signUpActivity_textView_terminationText"
                    android:layout_marginBottom="10dp"
