    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    android:id="@+id/signUpActivity_container">

    <LinearLayout
        android:id="@+id/signUpActivity_linearLayout_VPTSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00">

        <TextView
            android:id="@+id/signUpActivity_textView_VPTSignV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="@string/vptSign_v"
            android:textColor="@color/baby_blue"
            android:textSize="85sp" />

        <TextView
            android:id="@+id/signUpActivity_textView_VPTSignP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-15dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="@string/vptSign_P"
            android:textColor="@color/baby_blue"
            android:textSize="85sp" />

        <TextView
            android:id="@+id/signUpActivity_textView_VPTSignT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-32dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:text="@string/vptSign_T"
            android:textColor="@color/baby_blue"
            android:textSize="85dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signUpActivity_linearLayout_signUpDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="158dp"
        android:alpha="0"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/signUpActivity_textView_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/signUpActivity_signUp_LABEL"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/signUpActivity_textView_email"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:textColor="#3E3E3E"
            android:layout_height="wrap_content"
            android:text="@string/signUpActivity_email_LABEL" />

        <EditText
            android:id="@+id/signUpActivity_editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginBottom="8dp"
            android:hint="@string/signUpActivity_emailAddressHint_LABEL"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/signUpActivity_textView_password"
            android:layout_width="match_parent"
            android:textColor="#3E3E3E"
            android:layout_height="wrap_content"
            android:text="@string/signUpActivity_password_label" />

        <EditText
            android:id="@+id/signUpActivity_editText_password"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/signUpActivity_passwordHint_LABEL"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/signUpActivity_textView_firstname"
            android:layout_width="match_parent"
            android:textColor="#3E3E3E"
            android:layout_height="wrap_content"
            android:text="@string/signUpActivity_firstName_LABEL" />

        <EditText
            android:id="@+id/editText_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/signUpActivity_firstNameHint_LABEL"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView_lastname"
            android:layout_width="match_parent"
            android:textColor="#3E3E3E"
            android:layout_height="wrap_content"
            android:text="@string/signUpActivity_lastName_LABEL" />

        <EditText
            android:id="@+id/editText_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/signUpActivity_lastNameHint_LABEL"
            android:inputType="textPersonName" />

        <LinearLayout
            android:id="@+id/signUpActivity_linearLayout_TOCS"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signUpActivity_textView_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#3E3E3E"
                android:gravity="end"
                android:text="@string/signUpActivity_iAgreeToThe_LABEL" />

            <TextView
                android:id="@+id/signUpActivity_textView_toc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:text="@string/signUpActivity_theTermsAndConditions_LABEL"
                android:textColor="@color/Blue_Crayola"
                android:focusable="true" />

            <CheckBox
                android:id="@+id/checkBox_toc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/signUpActivity_iAgreeCheckBox_LABEL" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/signUpActivity_linearLayout_cancelSignUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signUpActivity_button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="@string/signUpActivity_cancelButton_LABEL" />

            <Button
                android:id="@+id/button_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:enabled="false"
                android:layout_marginBottom="5dp"
                android:text="@string/signUpActivity_signUpButton_LABEL"
                android:background="@drawable/button"
                android:textColor="@color/grayedout" />
        </LinearLayout>

    </LinearLayout>

